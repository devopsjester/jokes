{
    "name": "Python 3.12 Web App",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "GitHub.copilot",
        "GitHub.copilot-chat"
    ],
    "forwardPorts": [
        8000
    ],
    "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && python3 -m pip install -r requirements.txt",
    "remoteUser": "me"
}